{
    "tabWidth": 3,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "all",
    "printWidth": 80,
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.test.ts"
            ],
            "options": {
                "printWidth": 300,
                "tabWidth": 3
            }
        },
        {
            "files": [
                "cypress/e2e/**.{cy,spec}.{js,ts,jsx,tsx}"
            ],
            "options": {
                "printWidth": 80,
                "tabWidth": 3
            }
        }
    ]
}